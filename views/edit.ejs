<% include partials/header %>

<div class="container">
    <div class="jumbotron">
        <div>Edit <%= blog.title %></div>
    </div>
    <div class="container text-center">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group w-50 container">
                <input type="text" class="form-control" name="blog[title]"  value="<%= blog.title %>">
            </div>
            <div class="form-group w-50 container">
                <input type="text" class="form-control" name="blog[image]"  value="<%= blog.image %>">
            </div>
            <div class="form-group w-50 container">
                <textarea class="form-control"  rows="5" name="blog[body]"><%= blog.body %></textarea>
            </div>
            <button type="submit" class="btn btn-lg btn-outline-secondary">Submit</button>
        </form>
    </div>          
</div>    


<% include partials/footer %>