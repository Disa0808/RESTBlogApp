<% include partials/header %>


 <div class="container">
        <div class="row align-items-center justify-content-center">
            <h1><%= blog.title %></h1>
        </div>
        <div class="row align-items-center justify-content-center">
            <div class="col-md-8">
                <img style='float:left;width:50%;height:auto; margin-right:10px;' src="<%= blog.image %>" />
                <p><%= blog.body %></p>
            </div>
        </div>
        <div class="row align-items-center justify-content-center">
            <div class="col-md-8">
                <a class="btn btn-lg btn-outline-warning" href="/blogs/<%= blog._id %>/edit">Edit Post</a>
                <form id="delete" action="/blogs/<%= blog._id  %>?_method=DELETE" method="POST">
                    <button class="btn btn-lg btn-outline-danger">Delete Post</button>
                </form>
            </div>
        </div>
</div>

<% include partials/footer %>