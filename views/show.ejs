<% include partials/header %>


 <div class="container">
        <h1><%= blog.title %></h1>
        <div class="row">
            <div class="col-md-12">
                <img style='float:left;width:50%;height:auto; margin-right:10px;' src="<%= blog.image %>" />
                <p><%= blog.body %></p>
            </div>
        </div>
        <a class="btn btn-lg btn-outline-warning" href="/blogs/<%= blog._id %>/edit">Edit</a>
        <form id="delete" action="/blogs/<%= blog._id  %>?_method=DELETE" method="POST">
            <button class="btn btn-lg btn-outline-danger">Delete post</button>
        </form>
</div>

<% include partials/footer %>